@model IEnumerable<FinTrack.Core.DTOs.ExpenseDto>
@{
    ViewData["Title"] = "Gastos";
    var total = Model?.Sum(x => x.Amount) ?? 0m;
}

<div class="ft-page">
    <!-- Header -->
    <div class="ft-header">
        <div>
            <div class="ft-header-title">Gastos</div>
            <div class="ft-header-sub">Gestiona tus gastos mensuales</div>
        </div>

        <button type="button" class="ft-btn-primary" data-modal-open="newExpenseModal">
            <i class="bi bi-plus-lg"></i>
            Nuevo gasto
        </button>
    </div>

    <!-- Summary + Filters -->
    <section class="ft-section">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 items-center">
            <div class="lg:col-span-3">
                <div class="text-sm text-white/55">Total gastos</div>
                <div class="mt-1 text-3xl font-semibold tracking-tight">@total.ToString("C")</div>
            </div>

            <div class="lg:col-span-9 grid grid-cols-1 md:grid-cols-3 gap-3">
                <div class="md:col-span-2">
                    <input id="searchInput"
                           class="ft-input"
                           type="text"
                           placeholder="Buscar gastos por descripción o categoría..." />
                </div>

                <select id="categoryFilter" class="ft-input">
                    <option value="">Todas las categorías</option>
                    @if (ViewBag.Categories is IEnumerable<SelectListItem> items)
                    {
                        foreach (var c in items)
                        {
                            // El filtro compara contra data-cat="@item.CategoryName" => usamos el texto
                            <option value="@c.Text">@c.Text</option>
                        }
                    }
                </select>

            </div>
        </div>
    </section>

    <!-- List -->
    <section class="ft-section overflow-hidden">
        @if (Model != null && Model.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="text-white/60 border-b border-white/10">
                            <th class="text-left font-medium py-3 pr-4">Descripción</th>
                            <th class="text-left font-medium py-3 pr-4">Categoría</th>
                            <th class="text-left font-medium py-3 pr-4">Fecha</th>
                            <th class="text-right font-medium py-3 pl-4">Monto</th>
                            <th class="text-right font-medium py-3 pl-4">Acciones</th>
                        </tr>
                    </thead>

                    <tbody id="expenseTbody" class="divide-y divide-white/10">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-white/[0.03] transition"
                                data-desc="@item.Description"
                                data-cat="@item.CategoryName">
                                <td class="py-4 pr-4">
                                    <div class="flex items-center gap-3">
                                        <div class="h-10 w-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center">
                                            <i class="bi bi-bag text-amber-300"></i>
                                        </div>
                                        <div class="min-w-0">
                                            <div class="font-semibold text-white truncate">@item.Description</div>
                                            <div class="text-xs text-white/45">Gasto</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="py-4 pr-4">
                                    <span class="ft-badge">
                                        <span class="ft-badge-dot"></span>
                                        @item.CategoryName
                                    </span>
                                </td>

                                <td class="py-4 pr-4 text-white/70">
                                    @item.Date.ToString("dd 'de' MMMM, yyyy")
                                </td>

                                <td class="py-4 pl-4 text-right font-semibold text-white">
                                    -@item.Amount.ToString("C")
                                </td>

                                <td class="py-4 pl-4 text-right">
                                    <div class="inline-flex items-center gap-2">
                                        @* Conecta estos a tus Actions reales cuando me digas sus rutas *@
                                        <a class="ft-btn-ghost px-3 py-2"
                                           href="#"
                                           title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>    
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <a class="ft-btn-secondary text-sm"
                                           asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil"></i>
                                            Editar
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                              onsubmit="return confirm('¿Eliminar este gasto? Esta acción no se puede deshacer.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="ft-btn-ghost text-sm">
                                                <i class="bi bi-trash"></i>
                                                Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="ft-empty">
                <div class="mx-auto h-12 w-12 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center">
                    <i class="bi bi-inbox text-xl text-white/70"></i>
                </div>
                <div class="ft-empty-title mt-4">No hay gastos registrados</div>
                <div class="ft-empty-sub">Crea tu primer gasto para ver métricas y reportes.</div>

                <div class="mt-6">
                    <button type="button" class="ft-btn-primary" data-modal-open="newExpenseModal">
                        <i class="bi bi-plus-lg"></i>
                        Nuevo gasto
                    </button>
                </div>
            </div>
        }
    </section>
</div>

<!-- MODAL: Nuevo Gasto (Tailwind) -->
<div id="newExpenseModal" class="hidden ft-modal-backdrop" aria-hidden="true">
    <div class="ft-modal">
        <div class="flex items-start justify-between gap-4">
            <div>
                <div class="text-lg font-semibold">Nuevo gasto</div>
                <div class="text-sm text-white/55">Registra un gasto y asígnalo a una categoría.</div>
            </div>

            <button type="button" class="ft-btn-ghost px-3 py-2" data-modal-close="newExpenseModal" aria-label="Cerrar">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="ft-divider my-5"></div>

        <!-- Form apunta al POST Create del Controller -->
        <form asp-action="Create" method="post" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <div>
                    <label class="block text-sm text-white/60 mb-2">Monto</label>
                    <input type="number" step="0.01" name="Amount" class="ft-input" placeholder="0.00" required />
                </div>

                <div>
                    <label class="block text-sm text-white/60 mb-2">Fecha</label>
                    <input type="date" name="Date" class="ft-input" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
            </div>

            <div>
                <label class="block text-sm text-white/60 mb-2">Descripción</label>
                <input type="text" name="Description" class="ft-input" placeholder="Ej: Supermercado" required />
            </div>

            <div>
                <label class="block text-sm text-white/60 mb-2">Categoría</label>
                <select name="CategoryId" class="ft-input" asp-items="ViewBag.Categories" required>
                    <option value="">Selecciona una categoría</option>
                </select>
            </div>

            <div class="ft-divider pt-5"></div>

            <div class="flex items-center justify-end gap-2">
                <button type="button" class="ft-btn-secondary" data-modal-close="newExpenseModal">
                    Cancelar
                </button>
                <button type="submit" class="ft-btn-primary px-5">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Modal helpers (sin Bootstrap)
        (function () {
            function openModal(id) {
                const el = document.getElementById(id);
                if (!el) return;
                el.classList.remove('hidden');
                el.setAttribute('aria-hidden', 'false');
            }

            function closeModal(id) {
                const el = document.getElementById(id);
                if (!el) return;
                el.classList.add('hidden');
                el.setAttribute('aria-hidden', 'true');
            }

            document.addEventListener('click', (e) => {
                const openBtn = e.target.closest('[data-modal-open]');
                if (openBtn) openModal(openBtn.getAttribute('data-modal-open'));

                const closeBtn = e.target.closest('[data-modal-close]');
                if (closeBtn) closeModal(closeBtn.getAttribute('data-modal-close'));

                // click en backdrop cierra
                const backdrop = e.target.closest('.ft-modal-backdrop');
                if (backdrop && e.target === backdrop) closeModal(backdrop.id);
            });

            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    document.querySelectorAll('.ft-modal-backdrop:not(.hidden)').forEach(m => {
                        m.classList.add('hidden');
                        m.setAttribute('aria-hidden', 'true');
                    });
                }
            });
        })();

        // Filtro simple frontend (sin tocar backend)
        (function () {
            const search = document.getElementById('searchInput');
            const cat = document.getElementById('categoryFilter');
            const rows = Array.from(document.querySelectorAll('#expenseTbody tr'));

            function applyFilter() {
                const q = (search?.value || '').toLowerCase().trim();
                const c = (cat?.value || '').toLowerCase().trim();

                rows.forEach(r => {
                    const d = (r.getAttribute('data-desc') || '').toLowerCase();
                    const k = (r.getAttribute('data-cat') || '').toLowerCase();
                    const okQ = !q || d.includes(q) || k.includes(q);
                    const okC = !c || k === c;
                    r.style.display = (okQ && okC) ? '' : 'none';
                });
            }

            if (search) search.addEventListener('input', applyFilter);
            if (cat) cat.addEventListener('change', applyFilter);
        })();
    </script>
}
