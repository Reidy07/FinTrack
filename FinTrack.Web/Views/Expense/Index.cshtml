@model IEnumerable<FinTrack.Core.DTOs.ExpenseDto>
@{
    ViewData["Title"] = "Gastos";
}

<!-- Encabezado con Botón Modal -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Gastos</h2>
        <p class="text-muted mb-0">Gestiona tus gastos mensuales</p>
    </div>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newExpenseModal">
        <i class="bi bi-plus-lg me-1"></i> Nuevo Gasto
    </button>
</div>

<!-- Barra Total y Filtros -->
<div class="card card-custom p-4 mb-4">
    <div class="row align-items-center">
        <div class="col-md-3">
            <small class="text-muted d-block">Total Gastos</small>
            <h3 class="mb-0 text-white">@Model.Sum(x => x.Amount).ToString("C")</h3>
        </div>
        <div class="col-md-9 d-flex gap-2">
            <input type="text" class="form-control bg-dark text-light border-secondary" placeholder="Buscar gastos..." id="searchInput">
            <select class="form-select bg-dark text-light border-secondary" style="width: 200px;">
                <option>Todas las categorías</option>
            </select>
        </div>
    </div>
</div>

<!-- Tabla de Gastos -->
<div class="card card-custom overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0" style="color: #9CA3AF;">
            <thead style="background-color: #2d3035;">
                <tr>
                    <th class="py-3 ps-4 text-black">Descripción</th>
                    <th class="py-3 text-black">Categoría</th>
                    <th class="py-3 text-black">Fecha</th>
                    <th class="py-3 text-end pe-4 text-black">Monto</th> 
                    <th class="py-3 text-end pe-4 text-black">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid #2d3035;">
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-secondary bg-opacity-25 p-2 me-3 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                    <i class="bi bi-bag text-warning"></i>
                                </div>
                                <span class="fw-bold text-white">@item.Description</span>
                            </div>
                        </td>
                        <td>
                             <span class="badge rounded-pill bg-dark border border-secondary text-light fw-normal px-3 py-2">
                                 @item.CategoryName
                             </span>
                        </td>
                        <td>@item.Date.ToString("dd 'de' MMMM, yyyy")</td>
                        <td class="text-end pe-4 fw-bold text-light">-@item.Amount.ToString("C")</td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-link text-muted"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-link text-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Any())
        {
            <div class="p-5 text-center text-muted">
                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                No hay gastos registrados.
            </div>
        }
    </div>
</div>

<!-- MODAL: Nuevo Gasto -->
<div class="modal fade" id="newExpenseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border border-secondary text-light">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Nuevo Gasto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <!-- Formulario apunta al POST Create del Controller -->
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label text-muted">Monto</label>
                        <input type="number" step="0.01" name="Amount" class="form-control bg-black text-white border-secondary" placeholder="0.00" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Descripción</label>
                        <input type="text" name="Description" class="form-control bg-black text-white border-secondary" placeholder="Ej: Supermercado" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Categoría</label>
                        <!-- IMPORTANTE: Este SelectList debe venir del ViewBag del Controller -->
                        <select name="CategoryId" class="form-select bg-black text-white border-secondary" asp-items="ViewBag.Categories">
                            <option value="">Selecciona una categoría</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">Fecha</label>
                        <input type="date" name="Date" class="form-control bg-black text-white border-secondary" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-link text-light text-decoration-none" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success px-4">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>