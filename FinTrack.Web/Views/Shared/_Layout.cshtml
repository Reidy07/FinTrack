@using Microsoft.AspNetCore.Identity
@using FinTrack.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="~/logo.svg" />
    <title>@ViewData["Title"] - FinTrack</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/logo.svg" />

    <!-- Estilos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>


    @if (SignInManager.IsSignedIn(User))
    {
        /* --- MODO LOGUEADO: SIDEBAR + CONTENIDO --- */

        // Obtenemos el usuario para mostrar su nombre o inicial
        var user = await UserManager.GetUserAsync(User);
        var userName = user?.FirstName ?? @user.FirstName!;

        <!-- 1. SIDEBAR (Izquierda) -->
        <nav class="sidebar-container d-flex flex-column justify-content-between">

            <!-- A. Logo -->
            <div class="mb-4">
                <div class="d-flex align-items-center gap-2 px-2">
                    <div class="bg-success rounded p-1 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-currency-dollar text-white h6 m-0"></i>
                    </div>
                    <div style="line-height: 1.2;">
                        <div class="fw-bold text-white m-0">FinTrack</div>
                        <small class="text-muted" style="font-size: 0.7rem;">Personal Finance</small>
                    </div>
                </div>
            </div>

            <!-- B. Menú de Navegación (Partial) -->
            <div class="flex-grow-1 overflow-auto">
                <partial name="_Sidebar" />
            </div>

            <!-- C. Perfil y Logout (Abajo) -->
            <div class="mt-3 pt-3 border-top border-secondary border-opacity-25">
                <!-- Link al Perfil -->
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="d-flex align-items-center gap-2 text-decoration-none text-white mb-2 px-2">
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 35px; height: 35px; font-size: 0.9rem;">
                        @(userName?.Substring(0, 1).ToUpper())
                    </div>
                    <div style="line-height: 1.2;">
                        <div class="small fw-bold">@userName</div>
                        <small class="text-muted" style="font-size: 0.7rem;">Ver perfil</small>
                    </div>
                </a>

                <!-- Botón de Logout -->
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Dashboard", new { area = "" })">
                    <button type="submit" class="btn btn-link text-danger text-decoration-none p-0 px-2 d-flex align-items-center gap-2 small">
                        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                    </button>
                </form>
            </div>
        </nav>

        <!-- 2. CONTENIDO PRINCIPAL (Derecha) -->
        <main class="main-content">
            @RenderBody()
        </main>
    }
    else
    {
        /* --- MODO NO LOGUEADO (Login/Register) --- */
        /* No mostramos sidebar, solo el cuerpo centrado */
        <main class="container-fluid p-0">
            @RenderBody()
        </main>
    }

    <!-- Scripts Globales -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>