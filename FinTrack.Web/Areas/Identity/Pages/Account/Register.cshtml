@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="~/logo.svg" />
    <title>Regístrate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="login-container d-flex align-items-center justify-content-center min-vh-100 p-3">
        <div class="card p-4 p-md-5" style="width: 100%; max-width: 450px; border: 1px solid var(--border-color);">

            <!-- Logo y Cabecera -->
            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-success bg-opacity-10 rounded p-2 mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#10B981" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                        <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z" />
                    </svg>
                </div>
                <h3 class="mb-1 text-light">FinTrack</h3>
                <p class="text-light small">Crear cuenta</p>
            </div>

            <h4 class="text-center mb-4  text-light">Comienza a controlar tus finanzas</h4>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <!-- Nombre -->
                <div class="mb-3">
                    <label asp-for="Input.FirstName" class="form-label text-muted small">Nombre</label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Tu nombre" />
                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                </div>

                <!-- Apellido -->
                <div class="mb-3">
                    <label asp-for="Input.LastName" class="form-label text-muted small">Apellido</label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Tu apellido" />
                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label text-muted small">Email</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="tu@email.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label text-muted small">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label text-muted small">Confirmar Contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Botón -->
                <div class="d-grid mb-4">
                    <button id="registerSubmit" type="submit" class="btn btn-primary py-2">Crear cuenta</button>
                </div>

                <!-- Footer Link -->
                <div class="text-center">
                    <span class="text-muted">¿Ya tienes cuenta?</span>
                    <a asp-page="./Login" class="text-primary fw-bold">Inicia sesión</a>
                </div>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
